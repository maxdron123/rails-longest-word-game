<div class="game">
<h1>New game</h1>
<ul class="letter-list">
<%@letters.each do |letter|%>
<li class="btn btn-primary"><%= letter %></li>
<%end%>
</ul>
<p>What is the longest word you can find?</p>
<form action='/score' method='POST' data-turbo='false'>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
<div class="input">
  <input type="text" name='word' class="form-control">
  <input type="submit" value='Play!'class="btn btn-primary">
  </div>
</form>
</div>
